{
  "name": "featherslist",
  "description": "A Craigslist style app with Feathers and Angular2",
  "version": "0.0.0",
  "homepage": "",
  "main": "src/",
  "keywords": [
    "feathers",
    "angular2",
    "craigslist"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ninachaubal/featherslist"
  },
  "bugs": "https://github.com/ninachaubal/featherslist/issues",
  "author": {},
  "contributors": [],
  "engines": {
    "node": ">= 4.0.0",
    "npm": ">=3.0.0"
  },
  "scripts": {
    "sass": "node-sass --include-path styles/ app/ -o app/ && node-sass styles/global.scss public/global.css",
    "ngc": "ngc -p tsconfig.json",
    "rollup": "rollup -c rollup.js",
    "build": "npm run sass && npm run ngc && npm run rollup",
    "watch": "onchange 'app/**/*.ts' 'app/**/*.scss' 'app/**/*.html' 'public/*.html' 'styles/*.scss' -- npm run build",
    "prestart": "npm run build",
    "start": "node src/",
    "start-dev": "concurrently \"npm run watch\" \"nodemon -w src/\"",
    "copydeps": "npm run copydeps-corejs && npm run copydeps-zonejs && npm run copydeps-reflect-metadata && npm run copydeps-feathers && npm run copydeps-fonts",
    "copydeps-corejs": "copyfiles -f node_modules/core-js/client/shim.min.js* public/lib",
    "copydeps-zonejs": "copyfiles -f node_modules/zone.js/dist/zone.js public/lib",
    "copydeps-reflect-metadata": "copyfiles -f node_modules/reflect-metadata/Reflect.js* public/lib",
    "copydeps-feathers": "copyfiles -f node_modules/feathers-client/dist/feathers.js node_modules/feathers-localstorage/dist/localstorage.js public/lib",
    "copydeps-fonts": "copyfiles -u 2 'node_modules/font-awesome/fonts/*' public",
    "typings": "typings install",
    "postinstall": "npm run typings && npm run copydeps",
    "test": "npm run jshint && npm run mocha",
    "jshint": "jshint src/. test/. --config",
    "mocha": "mocha test/ --recursive"
  },
  "dependencies": {
    "@angular/common": "^2.4.3",
    "@angular/core": "^2.4.3",
    "@angular/forms": "^2.4.3",
    "@angular/http": "^2.4.3",
    "@angular/platform-browser": "^2.4.3",
    "@angular/platform-browser-dynamic": "^2.4.3",
    "@angular/router": "^3.0.1",
    "@angular/upgrade": "^2.4.3",
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "core-js": "^2.4.1",
    "express-livereload": "0.0.24",
    "feathers": "^2.0.2",
    "feathers-authentication": "^0.7.10",
    "feathers-client": "^2.0.0-pre.1",
    "feathers-configuration": "^0.3.3",
    "feathers-errors": "^2.4.0",
    "feathers-hooks": "^1.5.8",
    "feathers-localstorage": "^0.5.0",
    "feathers-mongoose": "^3.6.2",
    "feathers-rest": "^1.5.0",
    "feathers-socketio": "^1.4.1",
    "font-awesome": "^4.6.3",
    "mongoose": "^4.6.1",
    "morgan": "^1.7.0",
    "node-normalize-scss": "^1.3.2",
    "nodemon": "^1.10.2",
    "passport": "^0.3.2",
    "reflect-metadata": "^0.1.8",
    "rxjs": "^5.0.0-beta.12",
    "serve-favicon": "^2.3.0",
    "socket.io-client": "^1.4.8",
    "susy": "^2.2.12",
    "winston": "^2.2.0",
    "zone.js": "^0.7.5"
  },
  "devDependencies": {
    "concurrently": "^3.0.0",
    "copyfiles": "^1.0.0",
    "jshint": "^2.9.3",
    "mocha": "^3.0.2",
    "node-sass": "^3.10.0",
    "onchange": "^3.0.2",
    "request": "^2.75.0",
    "rollup": "^0.36.0",
    "rollup-plugin-commonjs": "^5.0.4",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-uglify": "^1.0.1",
    "typescript": "^2.0.3",
    "typings": "^1.4.0"
  }
}
